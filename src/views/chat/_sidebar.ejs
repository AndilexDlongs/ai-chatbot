<aside
        id="sidebar"
        class="sidebar h-full flex-shrink-0 flex flex-col justify-between py-6 border-r border-zinc-800 bg-[#0c0e11] transition-all duration-300 overflow-y-auto"
      >
        <button
          id="sidebarToggle"
          class="flex items-center gap-3 px-3 mb-8 focus:outline-none"
          title="Toggle sidebar"
        >
          <div
            class="grid place-items-center w-10 h-10 rounded-full bg-zinc-900 ring-soft u-glow"
          >
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-label="Unisyn AI">
              <defs>
                <linearGradient id="uGrad" x1="0" y1="0" x2="1" y2="1">
                  <stop offset="0" stop-color="#c4b5fd" />
                  <stop offset="1" stop-color="#7c3aed" />
                </linearGradient>
              </defs>
              <path
                class="u-stroke"
                d="M6 7v5.6c0 4.1 3.4 7.4 7.5 7.4s7.5-3.3 7.5-7.4V7"
                stroke-width="2.15"
                stroke-linecap="round"
              />
              <g class="u-orbit fast">
                <ellipse
                  cx="12"
                  cy="13"
                  rx="8.6"
                  ry="2.8"
                  fill="none"
                  stroke="#5a31d3"
                  stroke-opacity=".55"
                  stroke-width="1.6"
                  transform="rotate(-18 12 13)"
                />
                <circle cx="20.2" cy="11.6" r="1.3" fill="#c4b5fd" />
              </g>
              <circle cx="14" cy="7" r="1.4" fill="#c4b5fd" />
            </svg>
          </div>
          <span class="sidebar-label text-sm font-semibold text-zinc-100">
            Unisyn AI
          </span>
        </button>

        <div class="flex-1 flex flex-col gap-2 px-2 w-full">
          <button
            id="newChatBtn"
            class="flex items-center gap-3 px-3 py-2 rounded-xl text-sm text-zinc-300 w-full text-left bg-indigo-600 hover:bg-indigo-700 transition-colors"
            title="Start new chat"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 text-white flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
            </svg>
            <span class="sidebar-label font-semibold text-white">New chat</span>
          </button>

          <button
            class="flex items-center gap-3 px-3 py-2 rounded-xl text-sm text-zinc-300 hover:bg-zinc-800/80 w-full text-left transition-colors"
            title="Search chats"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 text-zinc-300 flex-shrink-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span class="sidebar-label">Search chats</span>
          </button>

          <p class="text-xs text-zinc-500 font-semibold uppercase tracking-wider mt-4 mb-1 px-3 sidebar-label-recent">
            Recent
          </p>

          <button
            class="flex items-center gap-3 px-3 py-2 rounded-xl text-sm text-zinc-100 bg-zinc-800/80 hover:bg-zinc-800 w-full text-left transition-colors"
          >
            <span class="inline-block w-2 h-2 rounded-full bg-indigo-500 flex-shrink-0"></span>
            <span class="sidebar-label truncate">Current chat</span>
          </button>
        </div>

        <button
          class="flex rounded-xl items-center gap-4 px-3 mt-6 mb-2 text-sm text-zinc-300 hover:bg-zinc-800/80 w-full text-left"
          title="Profile"
        >
          <div class="w-9 h-9 rounded-full overflow-hidden border border-zinc-700 flex-shrink-0 bg-orange-500 grid place-items-center">
            <span class="text-sm font-bold text-white">JR</span>
          </div>
          <span class="sidebar-label">Profile</span>
        </button>
      </aside>